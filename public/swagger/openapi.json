{
  "openapi": "3.0.0",
  "info": {
    "title": "VideGrenier API",
    "version": "1.0.0",
    "description": "API for the VideGrenier application"
  },
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Get a list of products",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search term for product names",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sort order for products",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/cities": {
      "get": {
        "summary": "Search for cities",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Search term for city names",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}