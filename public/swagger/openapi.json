{
  "openapi": "3.0.0",
  "info": {
    "title": "VideGrenier API",
    "version": "1.0.0",
    "description": "L'API pour l'application VideGrenier, permettant de gérer les produits et les villes."
  },
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Obtenir la liste des produits",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Mot-clé pour le nom du produit",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Critère de tri des produits",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "opération réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/cities": {
      "get": {
        "summary": "Rechercher des villes",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Mot-clé pour la recherche de villes",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "opération réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}